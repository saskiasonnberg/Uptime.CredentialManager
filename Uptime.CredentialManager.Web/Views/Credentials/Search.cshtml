@model IEnumerable<Uptime.CredentialManager.Web.Models.Credential>

@{
    ViewData["Title"] = "Search";
}

<h2>Search</h2>

@using (Html.BeginForm())
{
    <p>
        Credential: @Html.TextBox("term") 
        <input type="submit" value="Search" />
    </p>
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayName("Users")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var credentail in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => credentail.Description)
                </td>
                <td>
                    @foreach (var i in ViewBag.UserListSearch)
                    {
                        @i.UserName
                      <br>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="credential.Id">Details</a>
                </td>
             </tr>
         }
        </tbody>
    </table>